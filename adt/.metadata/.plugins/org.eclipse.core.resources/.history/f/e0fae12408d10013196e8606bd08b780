package com.btp.mnotice;

import com.btp.mnotice.MainActivity.inforequest;

import android.os.Bundle;
import android.app.Activity;
import android.view.Menu;
import android.view.View;
import android.widget.EditText;

public class Admin extends Activity {

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_admin);
		
		
		final EditText from = (EditText) findViewById(R.id.from);
		final EditText header = (EditText) findViewById(R.id.header);
		final EditText detail = (EditText) findViewById(R.id.detail);

		add.setOnClickListener(new View.OnClickListener() {
			public void onClick(View v)
			{
				// TODO Auto-generated method stub
				refreshResult = "";
				String s=Search.getText().toString();
				refreshResult = s;
				new inforequest(s,serverip).execute();
			}
		});	
		
		
		
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.admin, menu);
		return true;
	}

}
